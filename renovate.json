{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergePatch",
    ":automergePr",
    ":automergeRequireAllStatusChecks"
  ],
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "custom.regex"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchCategories": "ruby",
      "labels": ["dependencies", "ruby"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".ruby-version"],
      "matchStrings": [
        "ARG ruby_version=(?<currentValue>.*?)"
      ],
      "depNameTemplate": "ruby",
      "packageNameTemplate": "ruby",
      "datasourceTemplate": "custom.govuk-ruby-images-semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "ARG ruby_version=(?<currentValue>.*?)"
      ],
      "depNameTemplate": "ruby",
      "packageNameTemplate": "ruby",
      "datasourceTemplate": "custom.govuk-ruby-images-major-minor",
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)$"
    }
  ],
  "customDatasources": {
    "govuk-ruby-images-semver": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/alphagov/govuk-ruby-images/refs/heads/main/build-matrix.json",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $join(version[extra = 'latest'].rubyver, '.')}],\"sourceUrl\": \"https://github.com/alphagov/govuk-ruby-images\"}"
      ]
    },
    "govuk-ruby-images-major-minor": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/alphagov/govuk-ruby-images/refs/heads/main/build-matrix.json",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $join(version[extra = 'latest'].rubyver[[0..1]], '.')}],\"sourceUrl\": \"https://github.com/alphagov/govuk-ruby-images\"}"
      ]
    }
  }
}
